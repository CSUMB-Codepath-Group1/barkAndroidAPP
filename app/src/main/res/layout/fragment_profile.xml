<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bacround_gradient"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="234dp"
                android:layout_height="149dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="80dp"
                app:srcCompat="@drawable/ic_person_black_24dp" />
<!--            android:onClick="handleImageClick"-->


        </RelativeLayout>


        <Button
            android:id="@+id/updateProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/constraint"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="17dp"
            android:text="UPDATE PROFILE ACCOUNT" />
<!--        android:onClick="updateProfile"-->

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginStart="180dp"
            app:layout_toEndOf="@+id/updateProfileButton"
            android:layout_below="@+id/constraint"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/account_info"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/updateProfileButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="2dp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="Account Information" />

        <ImageView
            android:id="@+id/username_logo"
            android:layout_width="54dp"
            android:layout_height="35dp"
            android:layout_below="@+id/account_info"
            android:layout_marginTop="17dp"
            app:srcCompat="@drawable/fui_ic_anonymous_white_24dp" />

        <EditText
            android:id="@+id/username_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/account_info"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/username_logo"
            android:hint="USERNAME" />

        <ImageView
            android:id="@+id/email_logo"
            android:layout_width="54dp"
            android:layout_height="35dp"
            android:layout_below="@+id/username_logo"
            android:layout_marginTop="13dp"
            app:srcCompat="@drawable/fui_ic_mail_white_24dp" />

        <EditText
            android:id="@+id/email_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/username_info"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/email_logo"
            android:hint="EMAIL" />

        <ImageView
            android:id="@+id/phone_logo"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_below="@+id/email_logo"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/fui_ic_phone_white_24dp" />

        <EditText
            android:id="@+id/phone_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/email_info"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/phone_logo"
            android:hint="PHONE NUMBER" />

        <EditText
            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@+id/phone_info"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:hint="DESCRIPTION ...."/>

    </RelativeLayout>

</FrameLayout>