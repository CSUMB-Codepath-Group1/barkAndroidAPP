<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bacround_gradient"
        android:layout_marginTop="0dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:onClick="handleImageClick"
            app:srcCompat="@drawable/profile_pic" />


    </RelativeLayout>


    <Button
        android:id="@+id/updateProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="13dp"
        android:layout_below="@+id/constraint"
        android:text="UPDATE PROFILE ACCOUNT"
        android:onClick="updateProfile"/>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginStart="180dp"
        android:layout_below="@+id/constraint"/>

    <TextView
        android:id="@+id/account_info"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/updateProfileButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="2dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Account Information" />

    <EditText
        android:id="@+id/displayUserNameEditText"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_info"
        android:layout_marginStart="80dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="35dp"
        android:hint="FULLNAME" />

    <ImageView
        android:id="@+id/username_logo"
        android:layout_width="54dp"
        android:layout_height="35dp"
        android:layout_below="@+id/displayUserNameEditText"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/fui_ic_anonymous_white_24dp" />

    <EditText
        android:id="@+id/displayNameEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/displayUserNameEditText"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/username_logo"
        android:hint="USERNAME" />

    <ImageView
        android:id="@+id/email_logo"
        android:layout_width="54dp"
        android:layout_height="35dp"
        android:layout_below="@+id/username_logo"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/fui_ic_mail_white_24dp" />

    <EditText
        android:id="@+id/displayEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/displayNameEditText"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/email_logo"
        android:hint="EMAIL" />

    <ImageView
        android:id="@+id/phone_logo"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_below="@+id/email_logo"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/fui_ic_phone_white_24dp" />

    <EditText
        android:id="@+id/displayPhoneEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/displayEmailEditText"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/phone_logo"
        android:hint="PHONE NUMBER" />

    <ImageView
        android:id="@+id/description_logo"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_below="@+id/phone_logo"
        android:layout_marginTop="30dp"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <EditText
        android:id="@+id/displayDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@+id/displayPhoneEditText"
        android:layout_toEndOf="@+id/description_logo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="DESCRIPTION ...."/>


</RelativeLayout>